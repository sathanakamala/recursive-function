#include <stdio.h>

int main()
{
     int i,num,sum=0,rem;
     printf("Enter the number to be added:");
     scanf("%d",&num);
     for(i=0;num>0;i++)
      {
          rem=num%10;
          sum=sum+rem;
          num=num/10;
          
      }
      
      
    printf("Sum of digits is %d",sum);  
    
    return 0;  
}
