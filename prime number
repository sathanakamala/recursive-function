#include <stdio.h>

int main()
{
     int i,j,num,m,flag=0;
     printf("Enter the number:");
     scanf("%d",&num);
     m=num/2;
     for(i=2;i<=m;i++)
        {
                   if(num%i ==0)
                     {
                         printf("It is not a prime number");
                         flag=1;
                         break;
                     } 
                   if(flag==0)
                      printf("It is a prime number.");
              
        }
    return 0;  
}
